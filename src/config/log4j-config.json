{
  "appenders": {
    "error-file": {
      "type": "file",
      "layout": {
        "type": "json"
      },
      "filename": "log/error.log",
      "maxLogSize": 10485760,
      "backups": 1
    },
    "error": {
      "type": "logLevelFilter",
      "appender": "error-file",
      "level": "error"
    },
    "warn-file": {
      "type": "file",
      "layout": {
        "type": "json"
      },
      "filename": "log/warn.log",
      "maxLogSize": 10485760,
      "backups": 1
    },
    "warn": {
      "type": "logLevelFilter",
      "appender": "warn-file",
      "level": "warn",
      "maxLevel ": "warn"
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "warn",
        "error"
      ],
      "level": "warn"
    }
  }
}